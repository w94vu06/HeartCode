<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="藍芽狀態: "
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_BleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textColor="#ff0000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />
        <Space
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"/>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="電池: "-->
<!--            android:textColor="#000000"-->
<!--            android:textSize="14sp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/txt_BleStatus_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginEnd="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_0"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_detect"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:onClick="startWaveMeasurement"
            android:text="量測" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"

            android:text="停止" />

        <Button
            android:id="@+id/btn_clear_registry"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="清除註冊檔" />

        <TextView
            android:id="@+id/txt_countDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/dp_10"
            android:text="30"
            android:textSize="@dimen/dp_25" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5">

        <TextView
            android:id="@+id/txt_checkID_status"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="123"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/txt_checkID_result"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_isMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="識別結果"
                android:textColor="@color/blue"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/txt_detect_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="量測結果"
                android:textColor="@color/green"
                android:textSize="@dimen/dp_15" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_df"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_df2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
